<?xml version="1.0" encoding="utf-8"?>

<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          xmlns:views="clr-namespace:DoctorNow.Presentation.MobileApp.Views"
          xmlns:viewModels="clr-namespace:DoctorNow.Presentation.MobileApp.ViewModels"
          x:Class="DoctorNow.Presentation.MobileApp.Views.SettingsPage"
          x:DataType="viewModels:SettingsViewModel">
    <Grid IgnoreSafeArea="{OnPlatform Android=False, iOS=True}">
        <Label Text="Settings !"
               FontSize="Large"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center" />

        <StackLayout Orientation="Vertical" VerticalOptions="End">
            <Button
                Style="{StaticResource ButtonStyle}"
                Text="Log Off"
                VerticalOptions="End"
                Margin="20"
                HorizontalOptions="Center"
                Command="{Binding LogoffCommand}"/>
        </StackLayout>
    </Grid>
</views:BasePage>